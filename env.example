# RapidRelief Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://rapidrelief_user:rapidrelief_password@localhost:5432/rapidrelief

# IBM Watsonx.ai Granite API Configuration
# TODO(API_KEY): Replace with your actual IBM Watsonx.ai Granite API credentials
GRANITE_API_KEY=TODO_REPLACE_WITH_ACTUAL_API_KEY
GRANITE_API_URL=https://api.watsonx.ai/v1/text/generation
GRANITE_MODEL=ibm/granite-13b-instruct-v2

# IBM Agent Development Kit Configuration
# TODO(API_KEY): Replace with your actual IBM ADK credentials when available
ADK_API_KEY=TODO_REPLACE_WITH_ACTUAL_ADK_API_KEY
ADK_API_URL=https://api.ibm.com/adk/v1

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=true

# Security Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration (for future caching/queuing)
REDIS_URL=redis://localhost:6379

# Email Configuration (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
